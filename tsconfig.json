{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es2015.core", "es2015.promise"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "inlineSources": true
  }
}
